<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/backgroundimg1"
    tools:context=".ui.fragments.SearchFragment">

    <EditText

        android:id="@+id/searchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:hint="Name"

        />
    <Button
        android:id="@+id/btnshow"
        android:text="Find Visitor details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/showName"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"



        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/showReason"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"



        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showPhone"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="120dp"





        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showAddress"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"




        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showtimeStart"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"




        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showdateStart"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"

        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showtimeEnd"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"

        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/showdateEnd"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"

        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft="120dp"

        android:layout_height="wrap_content"
        />

</LinearLayout>